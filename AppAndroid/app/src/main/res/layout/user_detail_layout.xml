<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_azul_1000">

    <ImageView
        android:id="@+id/login_app_logo"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/flag_blue_500t"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userdetails_clanname" />

    <TextView
        android:id="@+id/userdetails_username"
        android:layout_width="220dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/main_fondo_boton"
        android:ems="10"
        android:fontFamily="@font/bungee"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/naniiiiii78"
        android:textColor="#000000"
        android:textColorHint="#040404"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userdetails_clanname"
        android:layout_width="220dp"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/main_fondo_boton"
        android:fontFamily="@font/bungee"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/power_rangers"
        android:textColor="#000000"
        android:textColorHint="#040404"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userdetails_username" />

    <ImageButton
        android:id="@+id/userdetails_createclan_button"
        android:layout_width="220dp"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/fondo_boton"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userdetails_changeclan_button" />

    <ImageButton
        android:id="@+id/userdetails_logout_button"
        android:layout_width="220dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fondo_boton"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userdetails_createclan_button" />

    <ImageButton
        android:id="@+id/userdetails_changeclan_button"
        android:layout_width="220dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fondo_boton"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_app_logo" />

    <TextView
        android:id="@+id/userdetails_changeclan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:foregroundGravity="center_horizontal"
        android:text="@string/clan_change"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/userdetails_changeclan_button"
        app:layout_constraintEnd_toEndOf="@+id/userdetails_changeclan_button"
        app:layout_constraintStart_toStartOf="@+id/userdetails_changeclan_button"
        app:layout_constraintTop_toTopOf="@+id/userdetails_changeclan_button" />

    <TextView
        android:id="@+id/userdetails_createclan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:foregroundGravity="center_horizontal"
        android:text="@string/crear_clan"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/userdetails_createclan_button"
        app:layout_constraintEnd_toEndOf="@+id/userdetails_createclan_button"
        app:layout_constraintStart_toStartOf="@+id/userdetails_createclan_button"
        app:layout_constraintTop_toTopOf="@+id/userdetails_createclan_button" />

    <TextView
        android:id="@+id/userdetails_logout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:foregroundGravity="center_horizontal"
        android:text="@string/logout"
        android:textColor="@color/text_white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/userdetails_logout_button"
        app:layout_constraintEnd_toEndOf="@+id/userdetails_logout_button"
        app:layout_constraintStart_toStartOf="@+id/userdetails_logout_button"
        app:layout_constraintTop_toTopOf="@+id/userdetails_logout_button" />

</androidx.constraintlayout.widget.ConstraintLayout>