<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userdetails_username"
        android:layout_width="306dp"
        android:layout_height="76dp"
        android:background="@drawable/main_fondo_boton"
        android:ems="10"
        android:fontFamily="@font/bungee"
        android:gravity="center_vertical"
        android:text="Naniiiiii78"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#040404"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userdetails_clanscore"
        android:layout_width="107dp"
        android:layout_height="76dp"
        android:layout_marginStart="304dp"
        android:background="@drawable/main_fondo_boton"
        android:fontFamily="@font/bungee"
        android:gravity="center_vertical"
        android:text="7"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#040404"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userdetails_userscore" />

    <TextView
        android:id="@+id/userdetails_userscore"
        android:layout_width="107dp"
        android:layout_height="76dp"
        android:layout_marginStart="304dp"
        android:background="@drawable/main_fondo_boton"
        android:fontFamily="@font/bungee"
        android:gravity="center_vertical"
        android:text="8"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#040404"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userdetails_clanname"
        android:layout_width="306dp"
        android:layout_height="76dp"
        android:background="@drawable/main_fondo_boton"
        android:fontFamily="@font/bungee"
        android:gravity="center_vertical"
        android:text="Power Rangers"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#040404"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userdetails_username" />

    <ImageView
        android:id="@+id/userdetails_clanicon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/userdetails_createclan_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userdetails_clanname"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo" />

    <ImageButton
        android:id="@+id/userdetails_createclan_button"
        android:layout_width="172dp"
        android:layout_height="75dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/fondo_boton"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toTopOf="@+id/userdetails_logout_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/userdetails_donate_button"
        android:layout_width="245dp"
        android:layout_height="75dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/fondo_boton"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/userdetails_logout_button"
        android:layout_width="245dp"
        android:layout_height="75dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/fondo_boton"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toTopOf="@+id/userdetails_donate_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/userdetails_changeclan_button"
        android:layout_width="172dp"
        android:layout_height="75dp"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/fondo_boton"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toTopOf="@+id/userdetails_logout_button"
        app:layout_constraintEnd_toStartOf="@+id/userdetails_createclan_button"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/userdetails_changeclan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:foregroundGravity="center_horizontal"
        android:text="@string/clan_change"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/userdetails_changeclan_button"
        app:layout_constraintEnd_toStartOf="@id/userdetails_changeclan_button"
        app:layout_constraintStart_toEndOf="@+id/userdetails_changeclan_button"
        app:layout_constraintTop_toBottomOf="@id/userdetails_changeclan_button" />

    <TextView
        android:id="@+id/userdetails_createclan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:foregroundGravity="center_horizontal"
        android:text="@string/crear_clan"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/userdetails_createclan_button"
        app:layout_constraintEnd_toEndOf="@+id/userdetails_createclan_button"
        app:layout_constraintStart_toStartOf="@+id/userdetails_createclan_button"
        app:layout_constraintTop_toTopOf="@+id/userdetails_createclan_button" />

    <TextView
        android:id="@+id/userdetails_logout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:foregroundGravity="center_horizontal"
        android:text="@string/logout"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/userdetails_logout_button"
        app:layout_constraintEnd_toEndOf="@+id/userdetails_logout_button"
        app:layout_constraintStart_toStartOf="@+id/userdetails_logout_button"
        app:layout_constraintTop_toTopOf="@+id/userdetails_logout_button" />

    <TextView
        android:id="@+id/userdetails_donate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:foregroundGravity="center_horizontal"
        android:text="@string/donate"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/userdetails_donate_button"
        app:layout_constraintEnd_toEndOf="@+id/userdetails_donate_button"
        app:layout_constraintStart_toStartOf="@+id/userdetails_donate_button"
        app:layout_constraintTop_toTopOf="@+id/userdetails_donate_button" />

</androidx.constraintlayout.widget.ConstraintLayout>